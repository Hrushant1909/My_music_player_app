<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#006562"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/iv_song_cover"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/tv_song_title"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_toRightOf="@id/iv_song_cover"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/play_btn"
                android:layout_toEndOf="@id/iv_song_cover"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/play_logo"
                android:backgroundTint="#14DAFD"/>


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/pause_btn"
                android:layout_toEndOf="@id/play_btn"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#14DAFD"
                android:src="@drawable/pause_logo"/>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>